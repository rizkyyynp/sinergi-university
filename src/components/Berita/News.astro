---

<!-- src\components\Berita\News.astro -->
<section class="relative min-h-[636px] py-10 px-5 lg:px-20">
  <div class="absolute inset-0 bg-cover bg-center bg-hero-pattern"></div>
  <div class="absolute inset-0 bg-white opacity-90 z-10"></div>
  <div class="relative z-20">
    <div class="flex justify-center items-center">
      <h5
        class="text-2xl text-secondary font-semibold relative inline-block after:content-[''] after:absolute after:w-full after:h-0.5 after:bg-line1 after:bottom-[-5px] after:left-0 after:right-0"
      >
        Berita Terbaru
      </h5>
    </div>
    <div class="flex flex-col lg:flex-row mt-10 lg:gap-2">
      <div class="w-full lg:w-1/2 flex mb-5">
        <div
          class="flex flex-col gap-2.5"
        >
          <Image
            src={Asset1}
            alt="Image1"
            class="w-full h-full lg:h-100 object-cover rounded-lg"
          />
          <div class="flex flex-col gap-2.5">
            <h6 class="font-semibold text-secondary text-xl">
              <a href="/eventDetails">
              Port Worker Portray the Reality of Bottlenecks
              </a>
